extends ../layouts/main

block content
  h1= title
  form(action='/login' method='post')
    .form-group.row
      label.col-form-label.col-sm-2.text-xs-right(for='username') Username
      div.col-sm-10
        input.col-sm-6(type='text' name='username')
    .form-group.row
      label.col-form-label.col-sm-2.text-xs-right(for='password') Password
      div.col-sm-10
        input.col-sm-6(type='password' name='password')
    .form-group.row
      div.col-sm-2.text-xs-right
        input.btn.btn-default(type='submit' value='Login')
