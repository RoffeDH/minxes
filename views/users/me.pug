extends ../layouts/main

block content
  form(method='POST')
    div.form-group
      label(for='email') E-mail
      input.form-control(type='email', name='email', value= user.email)

    div.form-group
      label(for='password') Password
      input.form-control(type='password', name='password')

    div.form-group
      label(for='password-authenticate') Repeate password
      input.form-control(type='password', name='password-authenticate')

    div.form-group
      input.btn.btn-success(type='submit')
