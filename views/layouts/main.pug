doctype html
html
  head
    title= title
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
  body.container-fluid
    div.container
      header
        nav.nav.nav-inline
          if (!user)
            a.nav-link(href='/login') Login
            a.nav-link(href='/register') Register
          if (user)
            span Hi #{user.username}
            a(href='/logout') Logout
      if error
        p= error
      block content

    script(src='https://cdnjs.cloudflare.com/ajax/libs/tether/1.3.8/js/tether.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js')
    script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.5/js/bootstrap.min.js', integrity='sha384-BLiI7JTZm+JWlgKa0M0kGRpJbF2J8q+qreVrKBC47e3K6BW78kGLrCkeRX6I9RoK', crossorigin='anonymous')
